{
  "name": "Nim Dev Container",
  "build": {
    "dockerfile": "../build.Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind"
	],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/sh"
  },
  "extensions": [
    "nim-lang.nim"
  ],
  "remoteUser": "root"
}
