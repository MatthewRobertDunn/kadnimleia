{
  "name": "Nim Dev Container",
  "build": {
    "dockerfile": "../build.Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/sh",
        "git.autorefresh": true
      },
      "extensions": [
        "nimsaem.nimvscode"
      ]
    }
  },
  "remoteUser": "root"
}